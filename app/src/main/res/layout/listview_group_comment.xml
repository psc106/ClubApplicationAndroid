<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/groupComment_img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupComment_txt_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="1123" />

            <TextView
                android:id="@+id/groupComment_txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="2011년 09월 11일" />

            <Button
                android:id="@+id/groupComment_imgBtn_del"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="삭제"/>

            <Button
                android:id="@+id/groupComment_imgBtn_modify"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="수정"/>

        </LinearLayout>

        <TextView
            android:id="@+id/groupComment_txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:maxLines="3"
            android:gravity="left|top" />

        <EditText
            android:id="@+id/groupComment_edt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="left|top"
            android:maxLines="3"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
