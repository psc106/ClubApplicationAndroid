<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/make_group_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeGroupActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_group_photo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#ffff00"/>
    <Button
        android:id="@+id/btn_select_group_photo"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 선택"/>
    <LinearLayout

        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임명 : "
            />
        <EditText
            android:id="@+id/text_group_name"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="22"
            android:background="@drawable/back"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주제 : "
            />
        <Spinner

            android:id="@+id/spinner_group_category"
            android:layout_width="130dp"
            android:layout_height="25dp">

        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원수 : "
            />
        <Spinner

            android:id="@+id/spinner_group_count"
            android:layout_width="130dp"
            android:layout_height="25dp">

        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 : "

            />
        <Spinner

            android:id="@+id/spinner_group_location"
            android:layout_width="130dp"
            android:layout_height="25dp">

        </Spinner>
    </LinearLayout>

    <TextView
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"/>

    <EditText
        android:textAlignment="textStart"
        android:id="@+id/text_group_info"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:background="@drawable/back"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
    <Button

        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="그룹생성"
        android:background="#79e2f7"
        />
    </RelativeLayout>
</LinearLayout>
    <FrameLayout
        android:id="@+id/make_group_menu"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center">
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>