<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/join_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".JoinActivity">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="아이디 : "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/join_id"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:hint="내용을 입력해 주세요"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_join_check_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중복확인" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 : "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/join_pw1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:hint="내용을 입력해 주세요"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인 : "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/join_pw2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:hint="내용을 입력해 주세요"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="이름 : "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/join_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:hint="내용을 입력해 주세요"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="생년월일 : "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/join_birth_year"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/join_birth_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/join_birth_day"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:inputType="number" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="성별 : "
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/join_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="이메일 : "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/join_mail_id"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/join_mail_address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back" />

                <Button
                    android:id="@+id/btn_join_mail_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="전화번호 : "
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/join_area_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/join_phoneNum1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/join_phoneNum2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="지역 : "
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/join_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_join_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원가입" />


        </LinearLayout>

    </ScrollView>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/join_menu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center"></FrameLayout>
</android.support.v4.widget.DrawerLayout>