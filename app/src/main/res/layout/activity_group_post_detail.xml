<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupPostDetailActivity">
    <ImageView
        android:id="@+id/group_board_detail_btn_before"
        android:alpha="0.3"
        android:background="#232323"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/group_board_detail_btn_next"
        android:alpha="0.3"
        android:background="#232323"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_centerHorizontal="true"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/group_board_detail_img"
                    android:layout_marginTop="20dp"
                    android:layout_width="280dp"
                    android:layout_height="180dp"
                    android:background="#021234"/>

                <TextView
                    android:id="@+id/group_board_detail_text"
                    android:text="내용"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/back"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/group_board_detail_txt_tag"
                        android:text="태그"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/group_board_detail_txt_date"
                        android:layout_marginRight="10dp"
                        android:text="2018/08/17"
                        android:layout_toLeftOf="@+id/group_board_detail_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/group_board_detail_txt_name"
                        android:text="작성자"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <ListView
                    android:id="@+id/lv_group_board_detail"
                    android:layout_width="match_parent"
                    android:layout_height="600dp">

                </ListView>
                <!--댓글 부분 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/group_board_detail_edt_re"
                        android:background="@drawable/back"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/group_board_detail_btn_re"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="작성"/>
                </LinearLayout>

                <!--글쓰기 &삭제 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/group_board_detail_btn_delete"
                            android:text="삭제"
                            android:layout_width="80dp"
                            android:layout_height="40dp" />
                        <Button
                            android:id="@+id/group_board_detail_btn_write"
                            android:layout_alignParentRight="true"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:text="글 쓰기"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>



    </ScrollView>
</RelativeLayout>