<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/postDetail_frg_layout"
    tools:context=".fragment.GroupBoardDetailFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/group_board_detail_txt_date"
                        android:layout_marginRight="10dp"
                        android:text="2018/08/17"
                        android:layout_toLeftOf="@+id/group_board_detail_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/group_board_detail_txt_name"
                        android:text="작성자"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/postDetail_frg_recycleV_img"
                    android:layout_width="match_parent"
                    android:layout_height="160dp" />

                <TextView
                    android:id="@+id/group_board_detail_text"
                    android:text="내용"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/back"/>
                <TextView
                    android:id="@+id/group_board_detail_txt_tag"
                    android:text="태그"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/back"/>

                <!--댓글 부분 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/group_board_detail_edt_re"
                        android:background="@drawable/back"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="left|top"/>
                    <Button
                        android:id="@+id/group_board_detail_btn_re"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:text="작성"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/postDetail_frg_listV_Comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
                <!--글쓰기 &삭제 -->
            </LinearLayout>

        </RelativeLayout>



    </ScrollView>

    <Button
        android:id="@+id/group_board_detail_btn_delete"
        android:text="삭제"
        android:layout_width="80dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/group_board_detail_btn_write"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="글 쓰기"/>

</RelativeLayout>