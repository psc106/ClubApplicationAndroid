<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/groupHome_scrollV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/groupHome_layout_Top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/groupHome_txt_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/group_home_txt_group_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6/10" />
                </LinearLayout>

                <!--모임장 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모임장 : " />

                    <TextView
                        android:id="@+id/group_home_txt_master"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test" />

                </LinearLayout>
                <!--주제-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주제 : " />

                    <TextView
                        android:id="@+id/group_home_txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test" />

                </LinearLayout>
                <!--지역-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지역 : " />

                    <TextView
                        android:id="@+id/group_home_txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test" />

                </LinearLayout>

                <!--소개-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소개 " />

                    <TextView
                        android:id="@+id/group_home_txt_info"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back"
                        android:text="test" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/groupHome_layout_Top2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupHome_layout_Top1"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:paddingBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <ListView
                    android:id="@+id/group_home_lv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/group_home_btn_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#e6be0f"
                android:text="가입"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>