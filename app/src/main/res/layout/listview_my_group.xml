<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lv_my_group_img"
        android:background="#ff0000"
        android:layout_margin="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <TextView
                android:layout_margin="4dp"
                android:id="@+id/lv_my_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="모임이름"/>
            <Button
                android:id="@+id/lv_my_group_btn_out"
                android:layout_margin="4dp"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_my_group_maker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임장"/>
            <TextView
                android:id="@+id/lv_my_group_count"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인원 6/10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주제"/>
            <TextView
                android:id="@+id/lv_my_group_category"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역"/>
            <TextView
                android:id="@+id/lv_my_group_location"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이젠아카데미"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>