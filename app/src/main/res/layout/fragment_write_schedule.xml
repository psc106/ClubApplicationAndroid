<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/writeSchedule_btn_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜*" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/writeSchedule_tILayout_Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/writeSchedule_edt_Place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="장소*"
                android:inputType="text"
                android:nextFocusDown="@id/writeSchedule_edt_Cost" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/writeSchedule_tILayout_Cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/writeSchedule_edt_Cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="금액*"
                android:inputType="text"
                android:nextFocusDown="@id/writeSchedule_edt_Intro" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/writeSchedule_tILayout_Intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/writeSchedule_edt_Intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="소개글*"
                android:inputType="text"
                android:nextFocusDown="@null" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/writeSchedule_tILayout_Tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/writeSchedule_edt_Tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex) a, b, c"
                android:inputType="text"
                android:nextFocusDown="@null" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/writeSchedule_btn_Ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTmp"
            android:text="작성" />
    </LinearLayout>
</RelativeLayout>
