<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/search_group_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchGroupActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout

            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/text_search_in_search_group"
                    android:layout_marginLeft="20dp"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:background="@drawable/search"
                    android:id="@+id/btn_search_in_search_group"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <Button
                    android:background="@drawable/down"
                    android:id="@+id/btn_search_detail_in_search_group"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/search_location_in_search_group"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역"
                    android:textSize="20dp"/>
                <Spinner
                    android:layout_marginLeft="20dp"
                    android:id="@+id/spinner_location_in_search_group"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/search_category_in_search_group"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주제"
                    android:textSize="20dp"/>
                <Spinner
                    android:layout_marginLeft="20dp"
                    android:id="@+id/spinner_category_in_search_group"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content">
                </Spinner>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/list_view_search_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/btn_make_group_in_search_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="모임 생성"
            android:background="#79e2f7"
            />

    </LinearLayout>
</LinearLayout>
    <FrameLayout
        android:id="@+id/search_group_menu"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center">
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>