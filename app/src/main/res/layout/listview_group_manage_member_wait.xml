<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/group_manage_member_join_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center">


        <!--이름 & 버튼-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/group_manage_member_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20dp" />

            <Button
                android:id="@+id/group_manage_member_btn_join_yes"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:text="승인" />

            <Button
                android:id="@+id/group_manage_member_btn_join_no"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/group_manage_member_btn_join_yes"
                android:text="거절" />
        </RelativeLayout>
        <!--나이 부분-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이 :" />

            <TextView
                android:id="@+id/group_manage_member_txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별 :" />

                <TextView
                    android:id="@+id/group_manage_member_txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역 :" />

                <TextView
                    android:id="@+id/group_manage_member_txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>