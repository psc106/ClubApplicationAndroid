<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myOption_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_MasterAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="테스트 알람"
            android:textAppearance="?android:attr/textAppearanceButton"
            app:switchMinWidth="45dp"
            app:switchPadding="10dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_ClubAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="테스트 알람"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
            app:switchMinWidth="45dp"
            app:switchPadding="10dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_ClubNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="테스트 알람"
            android:textAppearance="?android:attr/textAppearanceListItem"
            app:switchMinWidth="45dp"
            app:switchPadding="10dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_ClubSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="테스트 알람"
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:switchMinWidth="45dp"
            app:switchPadding="10dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="테스트 알람"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:switchMinWidth="45dp"
            app:switchPadding="10dp" />
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myOption_menu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center"></FrameLayout>

</android.support.v4.widget.DrawerLayout>