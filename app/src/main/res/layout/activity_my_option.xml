<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/myOption_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_MasterAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:text="테스트 알람"
            app:switchPadding="10dp"
            app:switchMinWidth="45dp"
            android:scaleY="1.3"
            android:scaleX="1.3"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_ClubAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
            android:text="테스트 알람"
            app:switchPadding="10dp"
            app:switchMinWidth="45dp"
            android:scaleY="1.3"
            android:scaleX="1.3"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_ClubNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:text="테스트 알람"
            app:switchPadding="10dp"
            app:switchMinWidth="45dp"
            android:scaleY="1.3"
            android:scaleX="1.3"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_ClubSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="테스트 알람"
            app:switchPadding="10dp"
            app:switchMinWidth="45dp"
            android:scaleY="1.3"
            android:scaleX="1.3"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/myOption_Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="테스트 알람"
            app:switchPadding="10dp"
            app:switchMinWidth="45dp"
            android:scaleY="1.3"
            android:scaleX="1.3"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/myOption_menu"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center">
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>